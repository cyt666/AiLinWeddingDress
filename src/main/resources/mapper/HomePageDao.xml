<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ailin.dao.HomePageDao">

    <resultMap id="homePageImageResult" type="com.ailin.model.TbHomeRotation" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="last_update" property="lastUpdate" jdbcType="TIMESTAMP" />
        <result column="visibility" property="visibility" jdbcType="TINYINT" />
        <result column="goods_id" property="goodsId" jdbcType="INTEGER" />
        <result column="position" property="position" jdbcType="INTEGER" />
        <result column="url" property="url" jdbcType="VARCHAR" />
    </resultMap>

    <resultMap id="newsResult" type="com.ailin.model.TbNews" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="last_update" property="lastUpdate" jdbcType="TIMESTAMP" />
        <result column="visibility" property="visibility" jdbcType="TINYINT" />
        <result column="shop_id" property="shopId" jdbcType="INTEGER" />
        <result column="title" property="title" jdbcType="VARCHAR" />
        <result column="content" property="content" jdbcType="VARCHAR" />
    </resultMap>


    <select id="news" resultMap="BaseResultMap">
        SELECT * FROM tb_news WHERE visibility=0
    </select>

    <!--查询首页轮播图-->
    <select id="homePageImage" resultType="homePageImageResult">
        SELECT * FROM tb_home_rotation WHERE  visibility=0 ORDER BY `position`
    </select>
    <!--查询公告-->
    <select id="news" resultMap="newsResult">
        SELECT * FROM tb_news WHERE visibility=0
    </select>
</mapper>