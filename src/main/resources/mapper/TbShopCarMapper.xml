    <select id="selectAllShopCarGoods" parameterType="java.lang.Integer" resultType="com.ailin.model.ShopCarGoods" >
        select
        s.id as shopId,
        s.image as shopImage,
        s.name as shopName,
        g.name as goodsName,
        g.color,
        g.description,
        g.hemline,
        g.price,
        g.style,
        gI.url as goodsImage,
        scgr.shop_car_id as shopCarId,
        scgr.size,
        scgr.count FROM
        tb_shop s,tb_goods g,tb_shop_goods_relation sgr,tb_shop_car_goods_relation scgr,tb_shop_car sc,tb_goods_image gI
        WHERE
        s.id=sgr.shop_id  AND g.id=sgr.goods_id AND  sgr.id=scgr.goods_id  and g.id=gI.id AND scgr.shop_car_id=sc.id  AND sc.id=#{id}
